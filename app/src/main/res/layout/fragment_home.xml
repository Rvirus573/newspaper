<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    android:layout_height="match_parent"
    tools:context=".Home">

    <ImageView
        android:layout_width="122dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:src="@drawable/news"

        />




    <android.support.v7.widget.AppCompatButton
        android:id="@+id/national_News_BTN_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bangla newspaper"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        app:backgroundTint="#d9dca0" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/english_News_BTN_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="English newspaper"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#000000"
        android:textSize="20sp"
        app:backgroundTint="#2ab9ed" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/online_News_BTN_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Online newspaper"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#000000"
        android:textSize="20sp"
        app:backgroundTint="#8636e7" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/local_News_BTN_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Local newspaper"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#000000"
        android:textSize="20sp"
        app:backgroundTint="#ed9734" />

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/webview_BTN_id"
        android:text="webview"

         />




</LinearLayout>